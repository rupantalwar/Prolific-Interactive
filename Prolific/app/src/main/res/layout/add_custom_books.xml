<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/addCustomBooks"
    tools:context=".MainActivity" >

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/editcbook"
        android:singleLine="true"
        android:inputType="text"
        android:hint="custom"/>


    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/editcbook"
        android:id="@+id/editcAuth"
        android:singleLine="true"
        android:inputType="text"
        android:hint="custom"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/editcAuth"
        android:id="@+id/editcPub"
        android:singleLine="true"
        android:inputType="text"
        android:hint="custom"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/editcPub"
        android:id="@+id/editcCat"
        android:singleLine="true"
        android:inputType="text"
        android:hint="custom"
         />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/editcCat"
        android:id="@+id/editcYourName"
        android:singleLine="true"
        android:inputType="text"
        android:hint="Your Name"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/editcYourName"
        android:id="@+id/update"
        android:text="Update"
         />



</RelativeLayout>